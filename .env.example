# aria2debrid Configuration
# Copy this file to .env and fill in your values
# Then run: source .env && iex -S mix

# Required: Your Real-Debrid API token
REAL_DEBRID_TOKEN=your_token_here

# Required: Path where completed media files are accessible
SAVE_PATH=/mnt/debrid/media

# Optional: HTTP server port (default: 8080)
# PORT=8080

# Optional: Category name shown in Sonarr/Radarr (default: aria2debrid)
# CATEGORY_NAME=aria2debrid

# Optional: Rate limiting (default: 60 requests per minute)
# RD_REQUESTS_PER_MINUTE=60

# Optional: Max retries for Real-Debrid API (default: 10)
# RD_MAX_RETRIES=10

# Optional: Additional file extensions to select (default: srt,sub,idx,ass,ssa,smi,vtt,nfo,jpg,jpeg,png,tbn)
# RD_ADDITIONAL_FILES=srt,sub,idx,ass,ssa,smi,vtt,nfo,jpg,jpeg,png,tbn

# Optional: Validate that file paths exist (default: true)
# VALIDATE_PATHS=true

# Optional: Enable media validation with ffprobe (default: true)
# MEDIA_VALIDATION_ENABLED=true
